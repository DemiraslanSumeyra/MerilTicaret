                </ul>

            </div>
            <div class="header-middle-info">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="index.html">
                            <h1>MERİL TİCARET</h1> 
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="header-middle-account">
                        <li><a href="/Kullanici/Hesabim"><i class="icon-330" title="My account"></i>Hesabım</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="/Kullanici/CikisYap"><i class="icon-351" title="Login"></i>Çıkış Yap</a></li>
                        }
                        else
                        {
                            <li><a href="/Kullanici/GirisYap"><i class="icon-351" title="Login"></i>Giriş Yap</a></li>
                        }

                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="menu">
                <div class="search-cart">
                    <form class="search">
                        <input type="text" class="search-line" placeholder="Ara" name="serch" />
                        <input type="submit" value="" class="search-button" />
                    </form>
                    @{
                        Html.RenderAction("MiniSepetWidget", "Home");
                    }

                    



                    <div class="clear"></div>
                </div>
                <div class="repsonsive-menu"><i class="icon-406" title="406"></i>Menü</div>
                <ul>
                    <li class="menu-item-has-children active">
                        <a href="/Home/Index">Anasayfa</a>
                    </li>
                    <li><a href="/Home/Kategoriler">Kategoriler</a></li>
                    <li class="menu-item-has-children">
                        <a href="#">Sayfalar</a>
                        <ul>
                            <li><a href="/Home/Hakkimizda">Hakkımızda</a></li>
                            <li><a href="/Kullanici/KayitOl">Kayıt Ol</a></li>
                        </ul>
                    </li>
                    <li><a href="/Home/Iletisim">İletişim</a></li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>

    <div class="content">
        @{
            Html.RenderAction("Slider", "Home");
        }

        @RenderBody()

        @{
            Html.RenderAction("Markalar", "Home");
        }

    </div>


    <div class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-xs-6">
